<div class="container mt-4 ">
  <h1>Bienvenue à la <strong>Taupinière</strong></h1>
  <p>Lieu de villégiature pour la famille Mahoudeau</p>

    <div class="card d-sm-flex mt-2 mb-4 box-shadow ">
    <div class="mt-2 mx-2"><h5><strong>Réservations</strong></h5></div>
      <div class="d-flex flex-row mx-3 mb-3">

          <% @reservations.each do |reservation| %>
            <div class="card flex-md-row m-3 box-shadow ">
              <div class="card-body d-flex flex-column align-items-start">
                <p><strong>Date arrivée :</strong> <%= reservation.arrival %></p>
                <p><strong>Date départ :</strong> <%= reservation.departure %></p>
                <p><strong>Qui :</strong> <%= reservation.user.email%></p>
                <p><strong>Commentaire :</strong> <%= reservation.comment %></p>
              </div>
            </div>
          <% end %>

      </div>
    </div>

    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <h5><strong>Listes en cours</strong></h5>
        <ul>
          <% @lists.each do |list| %>
            <li><%= link_to list.name, list_path(list) %></li>
          <% end %>
        </ul>
      </div>
    </div>

   <%= link_to "Réservations", reservations_path, class: "btn btn-primary" %>
   <%= link_to "Listes", lists_path, class: "btn btn-primary" %>
   <%= link_to "Tutos", tutos_path, class: "btn btn-primary"  %>
</div>
