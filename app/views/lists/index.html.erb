<div class="container w-50 mt-5">
  <div class="d-flex justify-content-center mb-3"><h1>Listes</h1></div>


  <% @lists.each do |list| %>
    <div class="card flex-md-row mb-2 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <h5><%= link_to list.name, list_path(list) %></h5>
        <p><%= list.task_names %></p>
        <ul>
          <% list.tasks.each do |task| %>
            <li><%= task.name %></li>
          <% end %>
        </ul>
        <%= link_to "Edit", edit_list_path(list), class: "btn btn-primary" %>
        <br>
        <%= link_to "Supprimer", list_path(list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Voulez-vous supprimer la liste dÃ©finitivement ?" } %>
      </div>
    </div>
  <% end %>

  <%= link_to "Nouvelle liste", new_list_path, class: "btn btn-primary" %>
</div>
