<div class="container">
  <h1>Réservations</h1>

  <% @reservations.each do |reservation| %>
    <div class="card flex-md-row mb-2 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <p><strong>Date arrivée :</strong> <%= reservation.arrival %></p>
        <p><strong>Date départ :</strong> <%= reservation.departure %></p>
        <p><strong>Qui :</strong> <%= reservation.user.email%></p>
        <p><strong>Commentaire :</strong> <%= reservation.comment %></p>
        <%= link_to "Edit", edit_reservation_path(reservation), class: "btn btn-primary" %>
        <br>
        <%= link_to "Supprimer", reservation_path(reservation), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Voulez-vous supprimer le tuto définitivement ?" } %>
      </div>
    </div>
  <% end %>

  <%= link_to "Nouvelle réservation", new_reservation_path, class: "btn btn-primary" %>
</div>
